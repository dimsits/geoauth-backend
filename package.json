{
  "name": "geoauth-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev src/server.ts",

    "build": "prisma generate && tsc -p tsconfig.json && npm run copy:docs",
    "copy:docs": "cpy \"src/docs/*.yaml\" dist/docs --parents",

    "start": "node dist/server.js",

    "prisma": "prisma",
    "prisma:migrate:dev": "cross-env NODE_ENV=development prisma migrate dev",
    "prisma:migrate:prod": "cross-env NODE_ENV=production prisma migrate deploy",

    "seed": "ts-node prisma/seed.ts",

    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimsits/geoauth-backend.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/swagger-ui-express": "^4.1.8",
    "cpy-cli": "^6.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.2"
  }
}
