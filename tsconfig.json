{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type safety */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Build behavior */
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": false,

    /* Node types */
    "types": ["node"]
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "prisma.config.ts"
  ]
}
